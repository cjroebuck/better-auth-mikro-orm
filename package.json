{
  "private": false,
  "type": "module",
  "name": "better-auth-mikro-orm",
  "version": "0.2.0",
  "description": "Mikro ORM Adapter for Better Auth",
  "keywords": [
    "auth",
    "better-auth",
    "db",
    "database",
    "adapter",
    "better-auth-adapter",
    "mikro-orm"
  ],
  "author": "Nick K.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/octet-stream/better-auth-mikro-orm.git"
  },
  "packageManager": "pnpm@9.15.1+sha512.1acb565e6193efbebda772702950469150cf12bcc764262e7587e71d19dc98a423dff9536e57ea44c49bdf790ff694e83c27be5faa23d67e0c033b583be4bfcf",
  "engines": {
    "node": ">= 18"
  },
  "types": "./lib/adapter.d.cts",
  "main": "./lib/adapter.cjs",
  "exports": {
    ".": {
      "node": {
        "types": "./lib/adapter.d.cts",
        "module-sync": "./lib/adapter.js",
        "default": "./lib/adapter.cjs"
      },
      "import": {
        "types": "./lib/adapter.d.ts",
        "default": "./lib/adapter.js"
      },
      "default": {
        "types": "./lib/adapter.d.cts",
        "default": "./lib/adapter.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": ["lib"],
  "scripts": {
    "build": "del-cli lib && tsup-node",
    "test": "vitest run",
    "test.watch": "vitest",
    "test.ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "release": "pnpm build && changeset publish",
    "prepare": "npx --yes is-in-ci || husky"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.2",
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@commitlint/types": "19.8.0",
    "@faker-js/faker": "9.7.0",
    "@mikro-orm/better-sqlite": "6.4.13",
    "@mikro-orm/core": "6.4.13",
    "@types/node": "22.14.1",
    "@types/uuid": "10.0.0",
    "@vitest/coverage-v8": "3.1.1",
    "@vitest/ui": "3.1.1",
    "better-auth": "1.2.7",
    "del-cli": "6.0.0",
    "husky": "9.1.7",
    "is-in-ci": "1.0.0",
    "tsup": "8.4.0",
    "typescript": "5.8.3",
    "uuid": "11.1.0",
    "vitest": "3.1.1"
  },
  "dependencies": {
    "dset": "3.1.4"
  },
  "peerDependencies": {
    "@mikro-orm/core": "^6.0.0",
    "better-auth": "^1.0.0"
  }
}
