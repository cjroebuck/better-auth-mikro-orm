{
  "private": false,
  "type": "module",
  "name": "better-auth-mikro-orm",
  "version": "0.1.0",
  "description": "Mikro ORM Adapter for Better Auth",
  "keywords": [
    "auth",
    "better-auth",
    "db",
    "database",
    "adapter",
    "better-auth-adapter",
    "mikro-orm"
  ],
  "author": "Nick K.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/octet-stream/better-auth-mikro-orm.git"
  },
  "packageManager": "pnpm@9.15.0+sha512.76e2379760a4328ec4415815bcd6628dee727af3779aaa4c914e3944156c4299921a89f976381ee107d41f12cfa4b66681ca9c718f0668fa0831ed4c6d8ba56c",
  "engines": {
    "node": ">= 18"
  },
  "types": "./lib/adapter.d.cts",
  "main": "./lib/adapter.cjs",
  "exports": {
    ".": {
      "node": {
        "types": "./lib/adapter.d.cts",
        "module-sync": "./lib/adapter.js",
        "default": "./lib/adapter.cjs"
      },
      "import": {
        "types": "./lib/adapter.d.ts",
        "default": "./lib/adapter.js"
      },
      "default": {
        "types": "./lib/adapter.d.cts",
        "default": "./lib/adapter.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": ["lib"],
  "scripts": {
    "build": "del-cli lib && tsup-node",
    "test": "vitest run",
    "test.watch": "vitest",
    "test.ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "release": "pnpm build && changeset publish",
    "prepare": "npx --yes is-in-ci || husky"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.10",
    "@commitlint/cli": "19.6.0",
    "@commitlint/config-conventional": "19.6.0",
    "@commitlint/types": "19.5.0",
    "@faker-js/faker": "9.3.0",
    "@mikro-orm/better-sqlite": "6.4.1",
    "@mikro-orm/core": "6.4.1",
    "@types/node": "22.10.2",
    "@types/uuid": "10.0.0",
    "@vitest/coverage-v8": "2.1.8",
    "@vitest/ui": "2.1.8",
    "better-auth": "1.0.19",
    "del-cli": "6.0.0",
    "husky": "9.1.7",
    "is-in-ci": "1.0.0",
    "tsup": "8.3.5",
    "typescript": "5.7.2",
    "uuid": "11.0.3",
    "vitest": "2.1.8"
  },
  "dependencies": {
    "dset": "3.1.4"
  },
  "peerDependencies": {
    "@mikro-orm/core": "^6.0.0",
    "better-auth": "^1.0.0"
  }
